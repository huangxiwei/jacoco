<project name="JaCoCo Instrument Task Tests" xmlns:au="antlib:org.apache.ant.antunit" xmlns:jacoco="antlib:org.jacoco.ant">
			
	<target name="setUp">
		<tempfile property="temp.dir" prefix="jacocoTest" destdir="${java.io.tmpdir}" />
		<mkdir dir="${temp.dir}"/>
	</target>

	<target name="tearDown">
		<delete dir="${temp.dir}" quiet="false" failonerror="true" />
	</target>	
	
	<target name="testInstrument">
		<jacoco:instrument todir="${temp.dir}">
			<classfiles>
				<fileset dir="${org.jacoco.ant.instrumentTaskTest.classes.dir}"/>
			</classfiles>
		</jacoco:instrument>
		
		<au:assertFileExists file="${temp.dir}/TestTargetInDefault.class"/>
	</target>

</project>